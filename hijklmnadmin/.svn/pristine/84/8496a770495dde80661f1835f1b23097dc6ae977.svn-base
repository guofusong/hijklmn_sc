	<script type="text/javascript">
		//页面初始化时加载	
		$(function() {
			openwindow("operateResultWindow");
		});

		// 打开模态框的通用方法
		var openwindow = function(windowObj) {
			$("#" + windowObj).modal("show");
		}

		//关闭模态框的通用方法
		var closewindow = function(windowObj) {
			$("#" + windowObj).modal("hide");
		}

		//通知消息窗口
		var openJSNoticeWindow = function(content) {
			$("#notice_content").text(content);
			$("#jsNoticeWindow").modal("show");
		}

		var toAddGoodsItem = function(objName) {
			$("#" + objName).submit();
		}

		// 弹出确认删除商品类别名称的窗口
		var deleteDialog = function(goodsClassItemId, goodsItemClassName) {
			var itemId = goodsClassItemId;
			var itemName = goodsItemClassName;
			$("#deleteGoodsClassItemId").val(itemId);
			$("#deleteGoodsClassItemName").html(goodsItemClassName);
			openwindow('deletewindow');
		}

		// 弹出修改商品类别名称的窗口
		var editDialog = function(goodsClassItemId, goodsClassItemName) {
			var itemName = goodsClassItemId;
			var goodsClassItemName = goodsClassItemName;
			$("#editOldGoodsClassItemName").html(goodsClassItemName);
			$("#editGoodsClassItemId").val(goodsClassItemId);
			openwindow('deletewindow');
		}

		//全选方法
		var selectAll = function() {
			var va = $("#selectallbtn").val();
			if (va == '全选') {
				$("input[type='checkbox']").each(function() {
					$(this).prop("checked", true);
				});
				$("#selectallbtn").val('取消全选');
			} else if (va == '取消全选') {
				$("input[type='checkbox']").each(function() {
					$(this).prop("checked", false);
				});
				$("#selectallbtn").val('全选');
			}
		}

		//单选方法
		var selectOption = function() {
			var tag = true;
			if (!$(this).prop("checked")) {
				$("input[type='checkbox']").each(function() {
					if (!$(this).prop("checked")) {
						tag = false;
					}
				});
			} else {
				$("input[type='checkbox']").each(function() {
					if (!$(this).prop("checked")) {
						tag = false;
					}
				});
			}
			if (tag) {
				$("#selectallbtn").val('取消全选');
			} else {
				$("#selectallbtn").val('全选');
			}
		}

		//批量提交 operateTag 为 1
		var batchshelvegoodsitem = function() {
			var tag = false;
			$("input:checkbox[type='checkbox']:checked").each(function(i) {
				tag = true;
			});
			if (tag) {
				$("#operateTag").val(1);
				$("#batchOperateForm").submit();
			} else {
				openJSNoticeWindow("请选择需要上架的商品。");
			}
		}

		//批量提交 operateTag 为 1
		var batchdeletegoodsitem = function() {
			$("#operateTag1").val(1);
			var tag = false;
			$("input:checkbox[type='checkbox']:checked").each(function(i) {
				tag = true;
			});
			if (tag) {
				$("#operateTag").val(2);
				$("#suretag").html("确定要删除选中的商品？");
				openwindow('deletewindow');
			} else {
				openJSNoticeWindow("请选择需要删除的商品。");
			}
		}

		//删除商品
		var deletegoodsitem = function(itemId, itemName) {
			$("#operateTag1").val(2);
			$("#operateTag").val(2);
			$("#deleteItemId").val(itemId);
			$("#suretag").html("确定要删除 " + itemName + " ？");
			openwindow('deletewindow');
		}

		//确定删除
		var deleteConfrimGoodsItem = function() {
			var tag = $("#operateTag1").val();
			if (tag == '1') {
				$("#batchOperateForm").submit();
			} else if (tag == '2') {
				$("#deleteForm").submit();
			}
		}

		//单个商品上架
		var shelvegoodsitem = function(itemId, formObj) {
			$("#shelveOperateTag").val(1);
			$("#shelveGoodsItemId").val(itemId);
			$("#" + formObj).submit();
		}

		//修改商品
		var toeditgoodsitem = function(itemId, objForm, objId) {
			$("#" + objId).val(itemId);
			$("#" + objForm).submit();
		}

		// 推荐商品
		var advancegoods = function(formObj, idObj, itemId) {
			$("#" + idObj).val(itemId);
			$("#" + formObj).submit();
		}
	</script>

